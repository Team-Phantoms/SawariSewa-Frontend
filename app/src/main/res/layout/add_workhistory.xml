<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#30336B"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="156dp"
        android:layout_height="23dp"
        android:textColor="@color/gradient"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Customer Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvmechname"
        android:layout_width="156dp"
        android:layout_height="23dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:hint="Mechanic Name"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvusername"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvmechPhone"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Phone"
        android:textColor="@color/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvusername" />

    <TextView
        android:id="@+id/tvmphone"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Phone"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvmechPhone"
        app:layout_constraintTop_toBottomOf="@+id/tvmechname" />

    <TextView
        android:id="@+id/tvproblemtype"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Problem Type"
        android:textColor="@color/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvmechPhone" />

    <TextView
        android:id="@+id/tvmproblemtype"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:hint="Problem Type"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toEndOf="@+id/tvproblemtype"
        app:layout_constraintTop_toBottomOf="@+id/tvmphone" />

    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="156dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Address"
        android:textColor="@color/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvmproblemtype" />

    <TextView
        android:id="@+id/tvmaddress"
        android:layout_width="155dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Address"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvaddress"
        app:layout_constraintTop_toBottomOf="@+id/tvmproblemtype" />

    <TextView
        android:id="@+id/tvlocationlat"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Latitude"
        android:textColor="@color/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvaddress" />

    <TextView
        android:id="@+id/tvmlocationlat"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Latitude"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvlocationlat"
        app:layout_constraintTop_toBottomOf="@+id/tvmaddress" />

    <TextView
        android:id="@+id/tvlocationlong"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/gradient"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Longitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlocationlat" />

    <TextView
        android:id="@+id/tvmlocationlong"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Longitude"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvlocationlong"
        app:layout_constraintTop_toBottomOf="@+id/tvmlocationlat" />




</androidx.constraintlayout.widget.ConstraintLayout>