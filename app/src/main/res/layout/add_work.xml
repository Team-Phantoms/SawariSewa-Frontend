<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#30336B"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="156dp"
        android:layout_height="23dp"
        android:textColor="@color/gradient"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Mechanic Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvmechname"
        android:layout_width="156dp"
        android:layout_height="23dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="16dp"
        android:hint="Mechanic Name"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvusername"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvmechPhone"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Phone"
        android:textColor="@color/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvusername" />

    <TextView
        android:id="@+id/tvmphone"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:hint="Phone"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvmechPhone"
        app:layout_constraintTop_toBottomOf="@+id/tvmechname" />

    <TextView
        android:id="@+id/tvproblemtype"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Problem Type"
        android:textColor="@color/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvmechPhone" />

    <TextView
        android:id="@+id/tvmproblemtype"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:hint="Problem Type"
        android:textColor="@color/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvproblemtype"
        app:layout_constraintTop_toBottomOf="@+id/tvmphone" />

    <TextView
        android:id="@+id/btncall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/call_logo"
        android:backgroundTint="@color/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvproblemtype"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnaccept"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/gradient"
        android:text="Completed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toEndOf="@+id/btncall"
        app:layout_constraintTop_toBottomOf="@+id/tvmproblemtype" />


</androidx.constraintlayout.widget.ConstraintLayout>